# Example Backend Configuration
# Copy this file to backend-config.hcl and update with your values
# DO NOT commit backend-config.hcl to version control if it contains sensitive information

# S3 bucket name for storing Terraform state
bucket = "your-terraform-state-bucket"

# Path within the bucket where the state file will be stored
key = "security-baseline/terraform.tfstate"

# AWS region where the S3 bucket is located
region = "us-east-1"

# DynamoDB table name for state locking
dynamodb_table = "your-terraform-state-lock-table"

# Optional: KMS key ID for encrypting the state file
# kms_key_id = "arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"

# Optional: Enable workspace-specific state files
# workspace_key_prefix = "workspaces"
